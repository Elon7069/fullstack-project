{
  "name": "flipkart-clone",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "npm start --workspace=client",
    "start:server": "npm start --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
} 